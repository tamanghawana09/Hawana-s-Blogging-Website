<div class="form-group">
    <label for="title">Title:</label>
    <input type="text" value="<%= blog.title%>" name="title"  class="form-control" required >
</div>
<div class="form-group">
    <label for="description">Description:</label>
    <textarea  name="description" id="description" class="form-control" required ><%= blog.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown:</label>
    <textarea name="markdown" id="markdown" class="form-control" required ><%= blog.markdown%></textarea>
</div>

<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>